<div class="table-responsive  pt-0 pb-5 mx-3">

    <table class="table table-bordered table-striped-columns">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Order ID</th>
                <th scope="col">User Name</th>
                <th scope="col">Item Name</th>
                <th scope="col">Amount</th>
                <th scope="col">Ordered On</th>
                <th scope="col" class="text-end">Action</th>
            </tr>
        </thead>
        <tbody>

            {{#each rows}}

            <tr>
                <th scope="row" style="width: 85px;">{{this.orderid}}</th>
                <td>{{this.name}}</td>
                <td>{{this.iname}}</td>
                <td>{{this.amount}}</td>
                <td style="width: 300px;">{{this.order_date}}</td>
                <td class="text-end">

                    <a href="/orders/{{this.orderid}}" type="button" class="btn btn-light btn-small"> <i
                            class="bi bi-trash"></i>
                        Delete</a>

                </td>
            </tr>

            {{/each}}

        </tbody>
    </table>

