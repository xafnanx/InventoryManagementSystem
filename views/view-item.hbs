</nav>

<div class="container pt-5 pb-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="   /">Home</a></li>
            <li class="breadcrumb-item"><a href="/storage">Storage</a></li>
            <li class="breadcrumb-item active" aria-current="page">About Item</li>
        </ol>
    </nav>


    <div class="view-user p-5">
        {{#each rows}}



        <div class="row mb-5">

            <div class="col text-center d-flex align-items-center">
                <img src="{{this.image}}" alt="" class="rounded img-thumbnail" style="height: 250px;">
                <h3 class="mx-5">{{this.iname}}</h3>
                {{#if (isEqual ../curuser.type "admin")}}
                <a href="/storage/edititem/{{this.id}}" type="button" class="btn btn-dark btn-small"> <i
                        class="bi bi-pencil"></i> Edit</a>
                {{/if}}
            </div>
        </div>

        <div class="row">
            <div class="col">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Available</th>
                            <th scope="col">Added On</th>
                            <th scope="col">Last Updated On</th>
                            <th scope="col">Supplier By</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">{{this.iname}}</th>
                            <td>{{this.quantity}}</td>
                            <td>{{this.added}}</td>
                            <td>{{this.updated}}</td>
                            <td>{{this.supplier_name}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="row">
                <div class="col">
                    <b>Description</b>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    {{this.description}}
                </div>
            </div>

        </div>

        {{/each}}
    </div>


</div>
