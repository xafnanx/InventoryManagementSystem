    <div class="container-fluid">
        <a class="navbar-brand" href="/"> <i class="bi bi-boxes"></i>&nbsp;Inventory Management</a>

        <div class="d-flex" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link active nv-hov" aria-current="page" href="/"><i class="bi bi-house-door"></i>
                        Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link nv-hov" href="/profile"> <i class="bi bi-person-circle"></i> {{curuser.name}}</a>
                </li>
                <li class="nav-item nv-hov">
                    <a class="nav-link nv-hov" href="/auth/logout"><i class="bi bi-box-arrow-right"></i> Logout</a>
                </li>
