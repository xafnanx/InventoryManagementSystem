<div class="container mt-4 px-4">
    <div class="row">
        <div class="col-6 pt-5 pb-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/storage">storage</a></li>
                    <li class="breadcrumb-item active" aria-current="page">suppliers</li>
                </ol>
            </nav>
            <h1>Suppliers</h1>
        </div>
    </div>

    <div class="table-responsive  pt-0 pb-5">

        <table class="table table-bordered table-striped-columns">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Supplier ID</th>
                    <th scope="col">Supplier Name</th>
                    <th scope="col" class="text-end">Action</th>
                </tr>
            </thead>
            <tbody>

                {{#each rows}}

                <tr>
                    <th scope="row">{{this.supplier_id}}</th>
                    <td>{{this.supplier_name}}</td>
                    <td class="text-end">

                        <a href="/supplier/{{this.supplier_id}}" type="button" class="btn btn-light btn-small"> <i
                                class="bi bi-trash"></i>
                            Delete</a>

                    </td>
                </tr>

                {{/each}}

            </tbody>
        </table>
    </div>

    {{#if success}}
    <div class="alert alert-success" role="alert">
        {{success}}
    </div>
    {{/if}}

    <h1>Add Supplier</h1>
    <form action="/supplier" method="POST">

        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>

        <div class="col-12 d-grid mt-3">
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>

    </form>

</div>